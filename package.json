{
    "name": "cobam",
    "displayName": "COBAM",
    "description": "Cobol analytics and modernisation",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "cbl",
                "aliases": [
                    "COBOL-cobam",
                    "cbl"
                ],
                "extensions": [
                    ".ccp",
                    ".scbl",
                    ".cbl",
                    ".cpy",
                    ".cob",
                    ".dds",
                    ".ss",
                    ".wks",
                    ".pco"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cbl",
                "scopeName": "source.cobol",
                "path": "./syntaxes/cobol.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "extension.helloCobam",
                "title": "Hello COBAM"
            },
            {
                "command": "extension.visualiseCodebase",
                "title": "Visualise Codebase"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "extension.visualiseCodebase",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/glob": "^7.2.0",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "typescript": "^4.2.2"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "glob": "^8.0.3"
    }
}
